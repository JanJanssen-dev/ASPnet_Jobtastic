@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<section class="user-control-panel p-0">
    <div class="container-fluid">
        <div class="row">
            <!-- Linke Navigationsleiste (schwebend) -->
            <div class="col-md-3 nav-sidebar">
                <div class="nav-container p-4 bg-light rounded shadow-sm">
                    <div class="text-center mb-4">
                        <img src="~/images/JobtasticBannerNEW.png" alt="Jobtastic" class="img-fluid" style="max-width: 100%; height: auto;">
                        <h5 class="mt-3" style="color: #0195ED">Benutzerverwaltung</h5>
                    </div>
                    <partial name="_ManageNav" />
                </div>
            </div>

            <!-- Inhaltsbereich rechts -->
            <div class="col-md-9">
                <div class="content-container p-4 bg-light rounded shadow">
                    <div class="mb-4 rounded-3 text-center">
                        <h4 class="mb-3" style="color: #0195ED">@ViewData["Title"]</h4>
                        <hr />
                    </div>
                    <div class="p-3">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Eigenes CSS für das User Control Panel -->
<style>
    .user-control-panel {
        margin-top: 20px;
        margin-bottom: 40px;
    }

    .nav-sidebar .nav-container {
        position: sticky;
        top: 20px;
    }

    /* Stiländerungen für die Navigationslinks */
    .nav-pills .nav-link {
        color: #495057;
        border-radius: 0.5rem;
        margin-bottom: 8px;
        transition: all 0.3s ease;
    }

        .nav-pills .nav-link.active {
            background-color: #0195ED;
            color: white;
        }

        .nav-pills .nav-link:hover:not(.active) {
            background-color: #e9ecef;
            transform: translateX(5px);
        }

        /* Spezieller Hover-Effekt für den Admin-Link */
        .nav-pills .nav-link.admin-link:hover {
            background-color: #ffc107;
            color: #212529;
            transform: translateX(5px) scale(1.02);
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

    /* Responsive Anpassungen */
    @@ media (max-width: 768px) {
        .nav-sidebar .nav-container

    {
        position: relative;
        margin-bottom: 20px;
    }

    }
</style>

@section Scripts {
    @await RenderSectionAsync("Scripts", required: false)
}