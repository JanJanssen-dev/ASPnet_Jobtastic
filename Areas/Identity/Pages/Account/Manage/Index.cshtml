@page
@model IndexModel
@{
    ViewData["Title"] = "Profil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<partial name="_StatusMessage" for="StatusMessage" />

<div class="card shadow-sm">
    <div class="card-header bg-light">
        <h5 class="mb-0">Persönliche Informationen</h5>
    </div>
    <div class="card-body">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-label">Aktueller Benutzername</label>
                        <input asp-for="Username" class="form-control" disabled />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="form-group">
                        <label asp-for="Input.UserName" class="form-label"></label>
                        <input asp-for="Input.UserName" class="form-control" placeholder="Neuer Benutzername" />
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                        <div class="form-text">Gib einen neuen Benutzernamen ein, wenn du ihn ändern möchtest.</div>
                    </div>
                </div>

                <div class="col-md-6 mb-3">
                    <div class="form-group">
                        <label asp-for="Input.PhoneNumber" class="form-label"></label>
                        <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Telefonnummer" />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <button id="update-profile-button" type="submit" class="btn btn-primary">
                <i class="fas fa-save me-1"></i> Speichern
            </button>
        </form>
    </div>
</div>

<div class="mt-4">
    <div class="alert alert-info" role="alert">
        <i class="fas fa-info-circle me-2"></i>
        <span>Hier kannst du deinen Benutzernamen und deine Kontaktinformationen verwalten.</span>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}