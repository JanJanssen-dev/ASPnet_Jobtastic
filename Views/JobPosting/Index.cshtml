@model List<JobPostingModel>
@{
    ViewData["Title"] = "Deine Inserate";
}
<section class="p-4 bg-light rounded shadow-sm">
    <div class="mt-6 p-5 bg-primary text-white rounded text-center">
        <h2>Deine Inserate</h2>
    </div>

    <div class="text-end">
    <a class="mt-3 btn btn-outline-primary" asp-controller="JobPosting" asp-action="CreatedEditJobPosting">neuen Job anlegen</a>
    </div>

    <section class="mt-3 p-4 bg-light rounded shadow-sm">
    @foreach(JobPostingModel jobPostingModel in Model)
    {
        <div class="row">
            <div class="col">@jobPostingModel.JobTitle</div>
                <div class="col">@jobPostingModel.CompanyName</div>
                <div class="col">@jobPostingModel.StartDate.ToShortDateString()</div>
                <div class="col">@jobPostingModel.JobTitle</div>
        </div>
    }
</section>
</section>